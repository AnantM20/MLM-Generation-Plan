@model List<User>
@{
    ViewData["Title"] = "Admin Panel";
}
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        // Show SweetAlert for TempData messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                icon: 'success',
                confirmButtonColor: '#667eea',
                timer: 3000,
                timerProgressBar: true
            });
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            Swal.fire({
                title: 'Error!',
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                confirmButtonColor: '#ff6b6b'
            });
            </text>
        }
    </script>
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-users-cog"></i> Admin Panel - User Management
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <button id="exportUsersBtn" class="btn btn-success">
            <i class="fas fa-download"></i> Export CSV
        </button>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" id="userSearch" class="form-control" placeholder="Search users...">
        </div>
    </div>
    <div class="col-md-8">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-primary filter-btn active" data-filter="all">All Users</button>
            <button type="button" class="btn btn-outline-success filter-btn" data-filter="active">Active</button>
            <button type="button" class="btn btn-outline-danger filter-btn" data-filter="inactive">Inactive</button>
            <button type="button" class="btn btn-outline-warning filter-btn" data-filter="admin">Admins</button>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-list"></i> All Users
                </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="userTable" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Sponsor ID</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>@user.UserId</strong></td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.MobileNumber</td>
                                    <td>@(user.SponsorId ?? "None")</td>
                                    <td>@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                        @if (user.IsAdmin)
                                        {
                                            <span class="badge bg-warning">Admin</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="UserDetails" asp-route-userId="@user.UserId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="ViewGenerationTree" asp-route-userId="@user.UserId" class="btn btn-sm btn-primary" title="View Tree">
                                                <i class="fas fa-sitemap"></i>
                                            </a>
                                            <button onclick="toggleUserStatusAjax(@user.Id, @(!user.IsActive).ToString().ToLower(), '@user.UserId')" 
                                                    class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")" 
                                                    title="@(user.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas @(user.IsActive ? "fa-ban" : "fa-check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

