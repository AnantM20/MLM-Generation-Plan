@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body text-center">
                <i class="fas fa-ban fa-5x text-danger mb-3"></i>
                <h2>Access Denied</h2>
