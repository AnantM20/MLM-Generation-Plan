@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4 align-items-center">
    <div class="col-12 col-md-8 mb-3 mb-md-0">
        <h2 class="text-primary mb-2">
            <i class="fas fa-tachometer-alt"></i> Welcome, @Model.User.FullName!
        </h2>
        <p class="text-muted mb-0">User ID: <strong>@Model.User.UserId</strong></p>
    </div>
    <div class="col-12 col-md-4 text-md-end">
        <div class="btn-group w-100 w-md-auto" role="group">
            <button id="refreshStatsBtn" class="btn btn-outline-primary flex-fill flex-md-none">
                <i class="fas fa-sync-alt"></i> <span class="d-none d-sm-inline">Refresh</span>
            </button>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-cog"></i> <span class="d-none d-sm-inline">Settings</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="form-check ms-3">
                            <input class="form-check-input" type="checkbox" id="autoRefreshToggle">
                            <label class="form-check-label" for="autoRefreshToggle">
                                Auto-refresh (30s)
                            </label>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4 dashboard-stats g-3">
    <div class="col-12 col-sm-6 col-md-3 mb-3">
        <div class="card text-white bg-primary shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Direct Referrals</h6>
                        <h2 class="mb-0" id="directReferrals">@Model.TotalDirectReferrals</h2>
                    </div>
                    <div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-md-3 mb-3">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Team Members</h6>
                        <h2 class="mb-0" id="totalTeamMembers">@Model.TotalTeamMembers</h2>
                    </div>
                    <div>
                        <i class="fas fa-sitemap fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-md-3 mb-3">
        <div class="card text-white bg-warning shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Income</h6>
                        <h2 class="mb-0" id="totalIncome">₹@Model.TotalIncome.ToString("N2")</h2>
                    </div>
                    <div>
                        <i class="fas fa-rupee-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-md-3 mb-3">
        <div class="card text-white bg-info shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Sponsor</h6>
                        <h6 class="mb-0">@(Model.User.SponsorId ?? "None")</h6>
                    </div>
                    <div>
                        <i class="fas fa-user-tie fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Generation Income Report -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-chart-line"></i> Generation Income Report (Up to 3 Levels)
                </h4>
            </div>
            <div class="card-body">
                @if (Model.GenerationLevels.Any())
                {
                    <div class="table-responsive">
                        <table id="generationLevelsTable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Level</th>
                                    <th>Member Count</th>
                                    <th>Income Per Member</th>
                                    <th>Total Income</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var level in Model.GenerationLevels)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">Level @level.Level</span>
                                        </td>
                                        <td><strong>@level.MemberCount</strong></td>
                                        <td>₹@level.IncomePerMember.ToString("N2")</td>
                                        <td><strong class="text-success">₹@level.TotalIncome.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <th colspan="3">Grand Total</th>
                                    <th>₹@Model.TotalIncome.ToString("N2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No referrals yet. Start referring members to earn income!
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Generation Tree -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-project-diagram"></i> Generation Tree
                </h4>
            </div>
            <div class="card-body">
                <div id="generationTree" class="tree-container">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Level Details -->
<div class="row g-3">
    @foreach (var level in Model.GenerationLevels)
    {
        <div class="col-12 col-sm-6 col-md-4 mb-3">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Level @level.Level Members</h5>
                </div>
                <div class="card-body">
                    @if (level.Members.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var member in level.Members)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@member.FullName</strong><br>
                                        <small class="text-muted">@member.UserId</small>
                                    </div>
                                    <span class="badge bg-primary">₹@level.IncomePerMember</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No members at this level</p>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadGenerationTree();
        });

        function loadGenerationTree() {
            $.ajax({
                url: '@Url.Action("GetGenerationTree", "Dashboard")',
                type: 'GET',
                success: function(data) {
                    renderTree(data, $('#generationTree'));
                },
                error: function() {
                    $('#generationTree').html('<div class="alert alert-danger">Failed to load generation tree.</div>');
                }
            });
        }

        function renderTree(node, container) {
            if (!node || !node.userId) {
                container.html('<div class="alert alert-info">No generation tree data available.</div>');
                return;
            }

            var html = '<div class="tree-node-wrapper">';
            html += '<div class="tree-node ' + (node.isActive ? 'active' : 'inactive') + '">';
            html += '<div class="node-content">';
            html += '<div class="node-name"><strong>' + node.fullName + '</strong></div>';
            html += '<div class="node-id">' + node.userId + '</div>';
            html += '</div>';
            html += '</div>';

            if (node.children && node.children.length > 0) {
                html += '<div class="tree-children">';
                node.children.forEach(function(child) {
                    html += '<div class="tree-child">';
                    var childContainer = $('<div></div>');
                    renderTree(child, childContainer);
                    html += childContainer.html();
                    html += '</div>';
                });
                html += '</div>';
            }

            html += '</div>';
            container.html(html);
        }
    </script>
    <style>
        .tree-container {
            padding: 20px;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }
        .tree-node-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }
        .tree-node {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 20px;
            border-radius: 12px;
            margin: 8px;
            min-width: 150px;
            max-width: 200px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
            word-wrap: break-word;
        }
        .tree-node:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }
        .tree-node.inactive {
            background: linear-gradient(135deg, #6c757d 0%, #545b62 100%);
        }
        .node-content {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        .node-name {
            font-weight: 600;
            font-size: 0.95rem;
        }
        .node-id {
            font-size: 0.8em;
            opacity: 0.9;
            font-family: 'Courier New', monospace;
        }
        .tree-children {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 20px;
            position: relative;
            gap: 10px;
            width: 100%;
        }
        .tree-children::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 10px;
            background: #ccc;
        }
        .tree-child {
            margin: 0 5px;
            position: relative;
            flex: 1 1 auto;
            min-width: 150px;
            max-width: 300px;
        }
        .tree-child::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 10px;
            background: #ccc;
        }
        
        /* Responsive Tree */
        @@media (max-width: 768px) {
            .tree-container {
                padding: 10px;
            }
            .tree-node {
                min-width: 120px;
                max-width: 150px;
                padding: 10px 15px;
                font-size: 0.85rem;
            }
            .tree-children {
                flex-direction: column;
                align-items: center;
            }
            .tree-child {
                width: 100%;
                max-width: 100%;
                margin: 5px 0;
            }
        }
        
        @@media (max-width: 576px) {
            .tree-node {
                min-width: 100px;
                max-width: 130px;
                padding: 8px 12px;
                font-size: 0.8rem;
            }
            .node-name {
                font-size: 0.85rem;
            }
            .node-id {
                font-size: 0.75em;
            }
        }
    </style>
}

